                      , hw-kafka-avro
                      , hw-kafka-client
                      , hw-kafka-conduit
                      , lens
                      , monad-control
                      , monad-logger
                      , mtl
                      , network
                      , random
                      , resourcet
                      , text
                      , transformers
                      , transformers-base
  default-extensions: OverloadedStrings, TupleSections
  if os(darwin)
    cpp-options: -D__attribute__(A)= -D_Nullable= -D_Nonnull=